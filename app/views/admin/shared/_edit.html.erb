<% className = form_action.delete(:class) %>
<%= form_tag(form_action, :id => "#{form_type}_form", :enctype => "multipart/form-data", :class => className) do %>

  <%= render :partial => "form" %>

<% end %>

<% if @article.user_id %>
	<%= form_tag :action => 'merge', :id => @article.id do %>
	   	<h4>Merge Articles</h4>
		<label for='merge_with_id'>Article ID</label>
		<input id="merge_with_id" name="merge_with" type="text" />
		<%= submit_tag 'Merge' %>
	<% end %>
<% end %>	
	
